<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_medium"
    app:cardCornerRadius="@dimen/card_radius"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/padding_medium"
        android:gravity="center_vertical">

        <!-- Product Image -->
        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/item_image_size"
            android:layout_height="@dimen/item_image_size"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/accent_pink">

            <ImageView
                android:id="@+id/ivBahanImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:contentDescription="Bahan Image" />

        </androidx.cardview.widget.CardView>

        <!-- Product Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="@dimen/margin_medium">

            <TextView
                android:id="@+id/tvBahanName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ayam"
                android:textSize="@dimen/text_size_medium"
                android:textColor="@color/text_primary"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/jumlah_stok"
                android:textSize="@dimen/text_size_small"
                android:textColor="@color/text_secondary"
                android:layout_marginTop="4dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/margin_small"
                android:gravity="center_vertical">

                <View
                    android:id="@+id/viewStatusDot"
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    android:background="@drawable/circle_red"
                    android:layout_marginEnd="6dp" />

                <TextView
                    android:id="@+id/tvBahanQuantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5 kg"
                    android:textSize="@dimen/text_size_small"
                    android:textColor="@color/text_primary"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

        <!-- Status Badge and Edit Icon -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="end">

            <ImageView
                android:id="@+id/ivEdit"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_edit"
                android:contentDescription="Edit"
                app:tint="@color/text_hint"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tvStatusBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/stok_rendah"
                android:textSize="10sp"
                android:textColor="@color/white"
                android:background="@drawable/badge_red"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>